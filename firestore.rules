rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    
    // Verifica si el usuario tiene privilegios de admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'itapimpresiones@gmail.com' ||
        request.auth.token.admin == true || 
        // Importante: esta función `exists` es interna de las reglas, no causa el error del cliente
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    // Verifica si el usuario autenticado es el dueño del documento que intenta tocar
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÓN ---

    // 1. ADMINS: Aquí estaba el error principal.
    // Permitimos que el usuario lea su propio ID para saber si es admin o no.
    match /admins/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow write: if isAdmin();
    }

    // 2. USERS: El usuario debe poder leer y escribir sus propios datos (checkout)
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // 3. ORDERS:
    match /orders/{orderId} {
      // El usuario ve sus propias órdenes, el admin ve todas
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      // Cualquiera autenticado puede crear una orden
      allow create: if request.auth != null;
      // Solo admin puede borrar o editar estados
      allow update, delete: if isAdmin();
    }

    // 4. BANNERS
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. PRODUCTOS
    match /products/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. CONTACTO
    match /contact_submissions/{document} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // 7. NOTIFICACIONES (FCM)
    match /fcmTokens/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      match /tokens/{tokenId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Bloqueo por defecto para cualquier otra cosa
    match /{document=**} {
      allow read, write: if false;
    }
  }
}