rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES AUXILIARES ---
    
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'itapimpresiones@gmail.com' ||
        request.auth.token.admin == true || 
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // --- REGLAS ---

    // 1. ADMINS
    match /admins/{userId} {
      allow read: if isOwner(userId) || isAdmin(); 
      allow write: if isAdmin();
    }

    // 2. USERS (Perfil de usuario)
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // 3. ORDERS (AQUÍ ESTABA EL ERROR)
    match /orders/{orderId} {
      // CORRECCIÓN: Cambiado 'userId' por 'userID' para coincidir con tu código
      allow read: if request.auth != null && (resource.data.userID == request.auth.uid || isAdmin());
      
      // Permitir crear si estás autenticado
      allow create: if request.auth != null; 
      
      // Solo admin borra o edita (o lógica específica para actualizar mensajes)
      allow update: if request.auth != null && (resource.data.userID == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
      
      // Subcolección de mensajes dentro de órdenes
      match /messages/{messageId} {
         allow read, write: if request.auth != null && (
            get(/databases/$(database)/documents/orders/$(orderId)).data.userID == request.auth.uid || isAdmin()
         );
      }
    }

    // 4. BANNERS
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. PRODUCTOS
    match /products/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. CONTACTO
    match /contact_submissions/{document} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // 7. FCM TOKENS
    match /fcmTokens/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      match /tokens/{tokenId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Bloqueo por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}